# Template file for 'foot'
pkgname=foot
version=1.20.2
revision=1
build_style=meson
configure_args="$(vopt_bool static prefer_static) -Dwerror=false -Db_lto=true
 $(vopt_feature textshaping grapheme-clustering)"
hostmakedepends="pkg-config scdoc wayland-devel"
makedepends="fcft-devel libxkbcommon-devel ncurses-devel tllist
 wayland-devel wayland-protocols $(vopt_if textshaping libutf8proc-devel)"
depends="${pkgname}-terminfo>=${version}_${revision} libutempter"
short_desc="Fast, lightweight and minimalistic Wayland terminal emulator"
maintainer="Andrew J. Hesford <ajh@sideband.org>"
license="MIT"
homepage="https://codeberg.org/dnkl/foot"
changelog="https://codeberg.org/dnkl/foot/raw/branch/master/CHANGELOG.md"
distfiles="https://codeberg.org/dnkl/foot/archive/${version}.tar.gz"
checksum=9a8832e2485923c8a79e77958c8b0357abd159dfa8958609402362da8e56c073
conf_files="/etc/xdg/foot/foot.ini"

if [ "$build_option_static" ]; then
	LDFLAGS=-static-pie
fi

build_options="textshaping static"
build_options_default="textshaping"
desc_option_textshaping="Enable support for text run shaping"
# textshaping dependencies aren't available as static libraries
vopt_conflict textshaping static

post_install() {
	rm -f ${DESTDIR}/usr/share/doc/foot/LICENSE
	vlicense LICENSE
}

foot-terminfo_package() {
	short_desc+=" - terminfo data"
	pkg_install() {
		vmove usr/share/terminfo
	}
}
