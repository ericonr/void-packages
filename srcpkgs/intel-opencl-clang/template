# Template file for 'intel-opencl-clang'
pkgname=intel-opencl-clang
version=11.0.0
revision=1
archs="x86_64*"
wrksrc=opencl-clang-${version}
build_style=cmake
makedepends="clang-tools-extra llvm SPIRV-LLVM-Translator-devel"
short_desc="Wrapper library to compile OpenCL C kernels to SPIR-V modules"
maintainer="Stefano Ragni <st3r4g@protonmail.com>"
license="NCSA"
homepage="https://github.com/intel/opencl-clang"
distfiles="https://github.com/intel/opencl-clang/archive/v${version}.tar.gz"
checksum=0c0d5fb4bfc85c1c1ae4b441eea223193721ecdd3d9165bcc6f7859d90e5bf66
patch_args=-Np1

nocross="https://travis-ci.org/github/st3r4g/void-packages/jobs/686510849#L4390"

post_install() {
	vlicense LICENSE
}

intel-opencl-clang-devel_package() {
	depends="${sourcepkg}>=${version}_${revision}"
	short_desc+=" - development files"
	pkg_install() {
		vmove usr/include
		vmove "usr/lib/*.so"
	}
}
