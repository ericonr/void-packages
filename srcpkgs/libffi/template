# Template file for 'libffi'
pkgname=libffi
version=3.4.2
revision=1
build_style=gnu-configure
# disable new trampoline:
# https://gitlab.gnome.org/GNOME/gobject-introspection/-/merge_requests/283
# https://gitlab.haskell.org/ghc/ghc/-/issues/20051
configure_args="--includedir=/usr/include --disable-multi-os-directory --with-pic
 --disable-exec-static-tramp"
checkdepends="dejagnu"
short_desc="Library supporting Foreign Function Interfaces"
maintainer="q66 <daniel@octaforge.org>"
license="MIT"
homepage="https://sourceware.org/libffi"
distfiles="https://github.com/libffi/libffi/releases/download/v${version}/libffi-${version}.tar.gz"
checksum=540fb721619a6aba3bdeef7d940d8e9e0e6d2c193595bc243241b77ff9e93620

post_install() {
	vlicense LICENSE
}

libffi-devel_package() {
	depends="libffi>=${version}_${revision}"
	short_desc+=" - development files"
	pkg_install() {
		vmove usr/include
		vmove "usr/lib/*.a"
		vmove "usr/lib/*.so"
		vmove usr/lib/pkgconfig
		vmove usr/share
	}
}
